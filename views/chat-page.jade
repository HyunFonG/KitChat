doctype html
html
    head(lang='en')
        meta(charset='utf-8')
        title Chat - KitChat
        link(rel='icon',href='favicon.ico')
        meta(name='viewport',content='initial-scale=1')
        link(rel='stylesheet',href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css")
        link(rel='stylesheet',href='https://fonts.googleapis.com/css?family=Roboto:400,100,100italic,300,300italic,400italic,500,500italic,700,700italic,900,900italic')
        link(rel='stylesheet',href='css/chat.css')
    body
        div.col-md-3.col-sm-3.left-panel
            div.kitchat-branding
                img(id="kitchat-logo",src="img/KitChat_Trans.png")
                span.username &nbspUsername
                a(href="/logout")
                   button(style="margin-left:25px;").button3 Logout
            div.chat-room
                div.chat-room-label.chat-room-label-joined Room Joined
                for group in grouplist
                    div.chat-room-item=group.name
                div.chat-room-label.chat-room-label-avaiable Room Avaiable
                each val in [1,2,3,4,5,6,7,8]
                    div.chat-room-item GROUP CHAT
        div.col-md-9.col-sm-3.right-panel
            div.chat-message
                p !{grouplist[1].name}
            div.chat-input
                input(type="text",placeholder="พิมพ์ข้อความ...")
